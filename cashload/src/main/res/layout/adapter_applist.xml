<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_appdownload"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/mine_button_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_app"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:src="@mipmap/appdownload" />

    <TextView
        android:id="@+id/tv_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_app"
        android:text="下载聊天"
        android:textColor="@color/yellow_c68b03"
        android:textSize="15sp" />

    <Button
        android:id="@+id/app_download"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:background="@drawable/mine_button2_bg"
        android:text="下载"
        android:textColor="@color/white" />

</RelativeLayout>